<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_option">

    <Button
        android:id="@+id/bResetDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="ResetDB" />

    <Button
        android:id="@+id/bConsumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bResetDB"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="What have I drunk so far..." />

    <ImageButton
        android:id="@+id/bLetsGetDrinking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessages"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/water_dddrop" />

</RelativeLayout>
