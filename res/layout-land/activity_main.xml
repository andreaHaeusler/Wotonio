<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_option" >

    <Button
        android:id="@+id/bResetDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="48dp"
        android:text="ResetDB" />

    <Button
        android:id="@+id/bConsumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="What have I drunk so far..." />

    <ImageButton
        android:id="@+id/bLetsGetDrinking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bResetDB"
        android:layout_marginRight="90dp"
        android:src="@drawable/water_dddrop" />

</RelativeLayout>
